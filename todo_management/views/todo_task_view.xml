<odoo>

    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">todo task tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="task_name"/>
                <field name="assign_to" widget="many2many_tags"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="todo_task_form" model="ir.ui.view">
        <field name="name">todo task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_new" type="object" class="btn-primary" string="Add New Task"
                                invisible="state == 'in_progress'"/>

                        <button name="action_in_progress" type="object" class="btn-secondary" string="In Progress"
                                invisible="state != 'new'"/>

                        <button name="action_completed" type="object" class="btn-success" string="Task Completed"
                                invisible="state != 'in_progress'"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="task_name"/>
                        <h1>
                            <field name="task_name"/>
                        </h1>
                    </div>
                    <group>

                        <group string="Task Info">
                            <field name="assign_to" required="1" widget="many2many_tags"/>
                            <field name="due_date"/>
                        </group>
                        <group>
                            <field name="description" required="1"/>
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">todo task search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

                <filter name="state" string="Completed Tasks" domain="[('state', '=', 'completed')]"/>
                <filter name="state" string="In Progress Tasks" domain="[('state', '=', 'in_progress')]"/>
                <filter name="state" string="New Tasks" domain="[('state', '=', 'new')]"/>

                <filter name="group_assined" string="Assigned To" context="{'group_by':'assign_to'}"/>
                <filter name="group_state" string="State" context="{'group_by':'state'}"/>
                <filter name="group_due_date" string="Due Date To" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>


    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">Todo Task</field>
        <field name="res_model">todo.task</field>
    </record>

    <menuitem
            id="todo_task_menu"
            name="To-Do Task"
            parent="all_tasks_menu"
            action="todo_task_action"
    />
</odoo>