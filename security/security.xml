<odoo>
    <record id="todo_task_category" model="ir.module.category">
        <field name="name">To-Do</field>
    </record>
    <record id="todo_task_manager_group" model="res.groups">
        <field name="name">Todo Task Manager</field>
        <field name="category_id" ref="todo_management.todo_task_category"/>
    </record>

    <record id="todo_task_user_group" model="res.groups">
        <field name="name">Todo Task User</field>
        <field name="category_id" ref="todo_management.todo_task_category"/>
    </record>

    <record id="todo_task_record_rule_by_user" model="ir.rule">
        <field name="name">Todo Task Record Rule by User</field>
        <field name="model_id" ref="todo_management.model_todo_task"/>
        <field name="domain_force">[
            '|',
            ('create_uid','=',user.id),
            ('assign_to','in',[user.partner_id.id])
            ]</field>
        <field name="groups" eval="[(4, ref('todo_management.todo_task_user_group'))]"/>
    </record>
</odoo>