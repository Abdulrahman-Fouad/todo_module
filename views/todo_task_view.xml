<odoo>

    <!--################### Tree View ###################-->
    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">todo task tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="(is_late)">
                <field name="ref"/>
                <field name="task_name"/>
                <field name="assign_to" widget="many2many_tags"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="estimated_time"/>
                <field name="state"/>
                <field name="active" column_invisible="1"/>
                <field name="is_late" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!--################### Form View ###################-->
    <record id="todo_task_form" model="ir.ui.view">
        <field name="name">todo task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success"
                            invisible="state != 'completed'"/>
                    <header>
                        <button name="action_new" type="object" class="btn-primary" string="Add New Task"
                                invisible="state not in ('in_progress', 'completed')"/>

                        <button name="action_in_progress" type="object" class="btn-secondary" string="In Progress"
                                invisible="state not in ('new', 'completed')"/>

                        <button name="action_completed" type="object" class="btn-success" string="Task Completed"
                                invisible="state != 'in_progress'"/>

                        <field name="state" widget="statusbar"/>
                    </header>
<!--                    <header>-->
<!--                        &lt;!&ndash; For managers &ndash;&gt;-->
<!--                        <button name="action_new" type="object" class="btn-primary" string="Add New Task"-->
<!--                                groups="todo_management.todo_task_manager_group" invisible="state not in ('in_progress', 'completed')"/>-->
<!--                        <button name="action_in_progress" type="object" class="btn-secondary" string="In Progress"-->
<!--                                groups="todo_management.todo_task_manager_group" invisible="state not in ('new', 'completed')"/>-->
<!--                        <button name="action_completed" type="object" class="btn-success" string="Task Completed"-->
<!--                                invisible="state != 'in_progress'" groups="todo_management.todo_task_manager_group"/>-->

<!--                        &lt;!&ndash; For regular users: only visible when in progress &ndash;&gt;-->
<!--                        <button name="action_completed" type="object" class="btn-success" string="Mark as Completed"-->
<!--                                groups="todo_management.todo_task_user_group"-->
<!--                                invisible = "state != ('in_progress')"/>-->

<!--                        <field name="state" widget="statusbar"/>-->
<!--                    </header>-->
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref"/>
                        </h1>
                        <label for="task_name"/>
                        <h3>
                            <field name="task_name" readonly="state in ('closed', 'completed')"/>
                        </h3>
                    </div>
                    <group>

                        <group string="Task Info">
                            <field name="assign_to" required="1" widget="many2many_tags"
                                   readonly="state in ('closed', 'completed')"/>
                            <field name="due_date" readonly="state in ('closed', 'completed')"/>
                            <field name="estimated_time" readonly="state in ('closed', 'completed')"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="description" required="1" readonly="state in ('closed', 'completed')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Timesheet">
                            <field name="line_ids" readonly="state in ('closed', 'completed')">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="date"/>
                                    <field name="time"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--################### Search View ###################-->
    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">todo task search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

                <filter name="state_completed" string="Completed Tasks" domain="[('state', '=', 'completed')]"/>
                <filter name="state_in_progress" string="In Progress Tasks" domain="[('state', '=', 'in_progress')]"/>
                <filter name="state_new" string="New Tasks" domain="[('state', '=', 'new')]"/>

                <filter name="group_assined" string="Assigned To" context="{'group_by':'assign_to'}"/>
                <filter name="group_state" string="State" context="{'group_by':'state'}"/>
                <filter name="group_due_date" string="Due Date To" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>

    <!--################### Server Actions ###################-->
    <record id="todo_task_closed_server_action" model="ir.actions.server">
        <field name="name">Close</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="groups_id" eval="[(6,0, [ref('todo_management.todo_task_manager_group')])]"/>
        <field name="state">code</field>
        <field name="code">
            actions = records.action_closed()
        </field>
    </record>

    <!--################### Cron Actions ###################-->
    <record id="task_due_date_alarm_cron" model="ir.cron">
        <field name="name">Task: Due Date Alarm</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            model.task_due_date_alarm()
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>


    <!--################### View Action ###################-->
    <record id="todo_task_action" model="ir.actions.act_window">
        <field name="name">Todo Task</field>
        <field name="res_model">todo.task</field>
    </record>

    <record id="todo_task_assign_task_wizard_action" model="ir.actions.server">
        <field name="name">Assign Task</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_assign_task_wizard()
        </field>
    </record>

    <menuitem
            id="all_task_menu_item"
            name="All Tasks"
            parent="todo_menu"
            action="todo_task_action"
    />
</odoo>